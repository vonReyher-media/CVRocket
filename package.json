{
  "name": "cvrocket",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter @vonreyher-media/cvrocket dev",
    "lint": "eslint . --ext .ts,.tsx",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint --fix",
    "*.{ts,tsx,js,jsx,json,css,md}": "prettier --write"
  },
  "devDependencies": {
    "@vonreyher-media/cvrocket": "workspace:*",
    "@eslint/js": "^9.22.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.26.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.5.1",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.5",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1"
  }
}
